# build: merges everything into one script.
TARGET="$PKGDIR/usr/bin/aosc-installer-sh"
mkdir -p $PKGDIR/usr/bin
cd $SRCDIR
cp installer $TARGET
echo -e "# Automatically merged. For better reading,\ntry running gg=G in vim for autoindent after you've set up autoindent." >> $TARGET
for i in install-* cpw; do
echo "$i() {"  >> $TARGET
cat $i | tail -n +2 >> $TARGET
echo "}" >> $TARGET
done
