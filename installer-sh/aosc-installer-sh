TARGET=$(whiptail --title "Partition Your Hard Drive" --inputbox "Please tell me the device name of your target partition: " 10 40 3>&1 1>&2 2>&3)
(Currently (df -T | grep $partition | awk '{print $2}

if (whiptail --title "ATTENTION" --yesno "Formatting a partition will cause data lost,\nand _USUALLY_ hard to recover!\n\nAre you =sure that you want to format `cat $TARGET` with `cat $FS`?" 15 65); then
FS=$(whiptail --title "Partition Your Hard Drive" --menu "Please choose a preferred filesystem from below\n')" 15 80 6 \
"ext3" "Third Extended File System" \
"ext4" "Fourth Extended File System" \
"jfs" "Journaled File System" \
"btrfs" "B-tree File System" \
"xfs" "XFS" 3>&1 1>&2 2>&3)
mkfs.$FS $TARGET
install-install
fi

# Libraries

#****f* aosc-installer-sh-libs/user_abort
# NAME
#   user_abort
# RESULT
#   exits with status 2 with a notify message
# SOURCE
user_abort(){
  echo "User aborted install."
  echo "Run '$scriptname' if you want to start the installer again."
  exit 2
}
#*****

#****f* aosc-installer-sh-libs/yes_or_no
# NAME
#   yes_or_no, calls either bash-read or whiptail to do a yes-or-no selection
# USAGE
#   yes_or_no "title" "text" height width ["yes text"] ["no text"]
# INPUTS
#   $LINE = (y/n)          - If we should use line-based input style(read)
#   $_DEFAULT = (optional) - The default value for read
# RESULT
#   returns 0 or 1 for true or false respectively.
# NOTES
#   read without readline may cause crashes.
# SOURCE
yes_or_no() {
  if [ "$LINE" == "y" ]; then
    echo -e "\e[1m$1\e[0m"
    echo '$2' | fold -w $4 -s
    while (read -e -i "$_DEFAULT" -p "Y for ${5:-Yes}, N for ${6:-No}[Y/N]" _yesno); do
      case $_yesno in
        y|Y|1|yes|true)
          return 0
          ;;
        n|N|0|no|false)
          retuen 1
          ;;
        *)
          echo -e "\e[1;31mINVALID INPUT\x21\e[0m"
       esac
  else whiptail --title "$1" --yesno "$2" $3 $4 --yes-button "${5:-Yes}" --no-button "$6{:-No}"; return $?
  fi
}
#*****

#****f* aosc-installer-sh-libs/choice
# NAME
#   choice, calls either bash-read or whiptail to do a single selection
# USAGE
#   choice "title" "menu" height width var-name "Selection 1" "Description 1" ...
# INPUTS
#   $LINE = (y/n)          - If we should use line-based input style(read)
#   $_DEFAULT = (optional) - The default value for read
# NOTES
#   read without readline may cause crashes.
# SOURCE
choice() {
  if [ "$LINE" == "y" ]; then
    
  else
  fi
}
